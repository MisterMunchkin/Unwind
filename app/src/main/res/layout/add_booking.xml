<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4dc3ff">


    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/createBookingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/checkOut_text"
            android:layout_alignStart="@+id/checkOut_text"
            android:layout_below="@+id/checkOut_text"
            android:layout_marginTop="26dp"
            android:text="create booking"
            android:background="#1ac6ff"
            android:textColor="#ffff"/>

        <EditText
            android:id="@+id/checkOut_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/checkIn_text"
            android:layout_below="@+id/checkIn_text"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:textColor="#ffff"
            android:textColorHint="#ffff"
            android:focusable="false"
            android:hint="check out date"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/checkIn_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="check in date"
            android:focusable="false"
            android:textColor="#ffff"
            android:textColorHint="#ffff"
            android:inputType="textPersonName"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp" />
    </RelativeLayout>

</RelativeLayout>